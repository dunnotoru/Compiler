<Window x:Class="IDE.View.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IDE.View"
        xmlns:vm="clr-namespace:IDE.ViewModel"
        mc:Ignorable="d"
        Title="{DynamicResource settings}" Height="450" Width="493"
        ResizeMode="NoResize">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:LanguageSettingsViewModel}">
            <local:LanguageSettingsControl/>
        </DataTemplate>
    </Window.Resources>

    <DockPanel>
        <ListView DockPanel.Dock="Left" Width="auto" 
                  ItemsSource="{Binding Items}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=Content}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        
        <ContentControl Margin="10" Content="{Binding CurrentViewModel}"/>
    </DockPanel>
</Window>
