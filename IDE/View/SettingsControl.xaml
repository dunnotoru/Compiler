<UserControl x:Class="IDE.View.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IDE.View"
             xmlns:vm="clr-namespace:IDE.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type vm:LanguageSettingsViewModel}">
            <local:LanguageSettingsControl/>
        </DataTemplate>
    </UserControl.Resources>

    <Grid>
        <DockPanel>
            <ListView DockPanel.Dock="Left" Width="auto" MinWidth="100" 
                  ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Path=Content}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <ContentControl Margin="10" Content="{Binding Path=SelectedItem.ViewModel}"/>
        </DockPanel>
    </Grid>
</UserControl>
